#include<stdio.h>
int lil();
int main()
{
	int x;
	x=lil();
	printf("\nThe smallest number is %d",x);
}
int lil()
{
	int i,n,a[100],small;
	printf("How many numbers to be inputed?\t");
	scanf("%d",&n);
	printf("\nEnter elements one by one:\n");
		for(i=0;i<n;i++)
		{
			printf("a[%d]=",i);
			scanf("%d",&a[i]);
		}
	small=a[0];
	for(i=1;i<n;i++)
	{
		if(small>a[i])
		{
			small=a[i];
		}
	}
	return(small);
}
