#include<stdio.h>
void interest (int, float, float);
void main()
{
    int p;
	float t,r,i;
	printf("Enter principle,time and rate respectively:");
	scanf("%d%f%f",&p,&t,&r);
	interest(p,t,r);
     getch();
}
void interest(int p,float t,float r)
{
	float x;
	   x=p*t*r/100;
		printf("The Interest is %f",x);	
}
