#include<stdio.h>
int big();
int main()
{
	int x;
	x=big();
	printf("\nThe largest number is %d",x);
}
int big()
{
	int i,n,j,k,a[100],larg,small;
	printf("How many numbers to be inputed?\t");
	scanf("%d",&n);
	printf("\nEnter elements one by one:\n");
		for(i=0;i<n;i++)
		{
			printf("a[%d]=",i);
			scanf("%d",&a[i]);
		}
	larg=a[0];
	for(i=1;i<n;i++)
	{
		if(larg<a[i])
		{
			larg=a[i];
		}
	}
	return(larg);
}
